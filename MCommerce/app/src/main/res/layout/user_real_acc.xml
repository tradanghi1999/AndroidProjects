<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnUpdateShopInfo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_bg_rounded_corners_darkblue"
            android:gravity="right|center_vertical"
            android:minWidth="80dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Cập Nhật"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/btnCancleUpdate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_bg_rounded_corners_turquoise"
            android:gravity="right|center_vertical"
            android:minWidth="80dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Huỷ"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold">

        </Button>
    </LinearLayout>
    <ScrollView
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:text="Về Chủ Của Hàng"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="-10dp"
                        android:ems="50"
                        android:text="Họ Tên Người chủ:"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edtShopOwnerName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_border_rounded_corners_lightgray"
                        android:ems="50"
                        android:hint="Vỹ Trần Duy"
                        android:inputType="textEmailAddress"
                        android:padding="18dp"
                        android:textSize="18dp"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txvProductDes"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="-10dp"
                        android:ems="50"
                        android:text="Số Điện Thoại"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edtShopOwnerPhone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_border_rounded_corners_lightgray"
                        android:ems="50"
                        android:hint="0352676904"
                        android:inputType="phone"
                        android:padding="18dp"
                        android:textSize="18dp"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="-10dp"
                        android:ems="50"
                        android:text="CMND"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edtShopOwnerId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_border_rounded_corners_lightgray"
                        android:ems="50"
                        android:hint="025856879"

                        android:padding="18dp"
                        android:textSize="18dp"></EditText>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:text="Về Cửa Hàng"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="-10dp"
                        android:ems="50"
                        android:text="Tên"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edtShopOwnerShopName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_border_rounded_corners_lightgray"
                        android:ems="50"
                        android:hint="Shop Trần Tục"
                        android:inputType="textEmailAddress"
                        android:padding="18dp"
                        android:textSize="18dp"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="-10dp"
                        android:ems="50"
                        android:text="MS Thuế"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edtShopOwnerShopTaxId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_border_rounded_corners_lightgray"
                        android:ems="50"
                        android:hint="TM1234568"
                        android:inputType="textEmailAddress"
                        android:padding="18dp"
                        android:textSize="18dp"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="-10dp"
                        android:ems="50"
                        android:text="Ngành Hàng"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edtShopOwnerShopIndustry"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_border_rounded_corners_lightgray"
                        android:ems="50"
                        android:hint="Mỹ Phẩm"
                        android:inputType="textEmailAddress"
                        android:padding="18dp"
                        android:textSize="18dp"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="-10dp"
                        android:ems="50"
                        android:text="Địa Chỉ"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edtShopOwnerShopAddress"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_border_rounded_corners_lightgray"
                        android:ems="50"
                        android:hint="12 Nguyễn Trọng Lội, phường 4, Tân Bình, Tp.HCM"
                        android:inputType="textEmailAddress"
                        android:padding="18dp"
                        android:textSize="18dp"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="-10dp"
                        android:ems="50"
                        android:text="MS Đăng Kí Kinh Doanh"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/edtShopOwnerShopId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_border_rounded_corners_lightgray"
                        android:ems="50"
                        android:hint="HKD1878536"
                        android:inputType="textEmailAddress"
                        android:padding="18dp"
                        android:textSize="18dp"></EditText>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</LinearLayout>
